<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/song_locker_arrow_img_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_main_arrow_more"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:rotation="180"
        app:tint="@color/black"
        />

    <ImageView
        android:id="@+id/song_locker_like"
        android:src="@drawable/ic_my_like_off"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintEnd_toStartOf="@id/song_locker_more_img_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/song_locker_more_img_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_player_more"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/song_locker_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pop Song"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/song_locker_title_img_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="37dp"/>

    <TextView
        android:id="@+id/song_locker_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kenshi Yonezu"
        android:textSize="13dp"
        android:textStyle="bold"
        android:textColor="@color/lightgray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/song_locker_title_img_iv"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/song_locker_information"
        android:layout_width="50dp"
        android:layout_height="16dp"
        android:layout_marginBottom="0dp"
        android:text="앨범정보"
        android:textColor="@color/lightgray"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/song_locker_title_img_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/song_locker_title_img_iv"
        android:layout_width="175dp"
        android:layout_height="200dp"
        android:layout_marginTop="110dp"
        android:src="@drawable/img_album_exp2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/album_content_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/song_locker_title_img_iv"
        app:layout_constraintStart_toStartOf="@id/song_locker_title_img_iv"
        app:layout_constraintTop_toBottomOf="@id/song_locker_title_img_iv"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/albumContentTp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/album_content_tb"/>

    <LinearLayout
        android:id="@+id/home_mini_player_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/home_bottom_navigation"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/home_mini_player_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pop Song"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kenshi Yonezu"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_mini_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/home_bottom_navigation"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp">


        <ImageView
            android:id="@+id/home_mini_player_previous"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_miniplayer_previous"/>

        <ImageView
            android:id="@+id/home_mini_player_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_miniplayer_play"/>

        <ImageView
            android:id="@+id/home_mini_player_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_miniplayer_next"/>

        <ImageView
            android:id="@+id/home_mini_player_go_list"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_miniplayer_go_list"/>

    </LinearLayout>


    <include
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>