<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home_mini_player_title">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<!--        <ImageView-->
<!--            android:id="@+id/home_pannel_background_iv"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="400dp"-->
<!--            android:scaleType="centerCrop"-->
<!--            android:src="@drawable/img_first_album_default"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent" />-->

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_pannel_vp"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/home_pannel_bnt_mike_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/btn_main_mike"
            app:layout_constraintEnd_toStartOf="@id/home_pannel_bnt_ticket_iv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"/>

        <ImageView
            android:id="@+id/home_pannel_bnt_ticket_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/btn_main_ticket"
            app:layout_constraintEnd_toStartOf="@id/home_pannel_bnt_setting_iv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"/>

        <ImageView
            android:id="@+id/home_pannel_bnt_setting_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/btn_main_setting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:id="@+id/home_pannel_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="달밤의 감성 산책"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_bnt_setting_iv"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp" />

        <ImageView
            android:id="@+id/home_pannel_btn_play_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_panel_play_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_bnt_mike_iv"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/home_pannel_album_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 10곡 2025.03.30"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/home_pannel_album1_img_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"
            android:textSize="13sp"/>

        <ImageView
            android:id="@+id/home_pannel_album1_img_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/img_album_exp"
            app:layout_constraintBottom_toTopOf="@id/home_pannel_album_img_iv"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/home_pannel_album1_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In My Bed"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@id/home_pannel_album1_img_iv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_album1_img_iv"
            app:layout_constraintBottom_toTopOf="@+id/home_pannel_album1_singer_tv" />

        <TextView
            android:id="@+id/home_pannel_album1_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bear"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_album1_img_iv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_album1_img_iv"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_album1_title_tv" />

        <ImageView
            android:id="@+id/home_pannel_album_img_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="192dp"
            android:src="@drawable/img_album_exp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/home_pannel_album_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="bear"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_album_img_iv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_album_img_iv"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_album_title_tv" />

        <TextView
            android:id="@+id/home_pannel_album_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="In My Bed"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/home_pannel_album_singer_tv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_album_img_iv"
            app:layout_constraintTop_toTopOf="@id/home_pannel_album_img_iv" />

        <TextView
        android:id="@+id/home_today_music_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 발매 음악"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_pannel_vp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/home_arrow_more_img_iv"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="-22dp"
        android:src="@drawable/btn_main_arrow_more"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_today_music_title"
        app:tint="@color/black"/>

        <ImageView
            android:id="@+id/home_today_music_iv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/img_album_exp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_today_music_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/home_mini_player_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/home_bottom_navigation"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/home_mini_player_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pop Song"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kenshi Yonezu"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_mini_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/home_bottom_navigation"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp">


        <ImageView
            android:id="@+id/home_mini_player_previous"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_miniplayer_previous"/>

        <ImageView
            android:id="@+id/home_mini_player_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_miniplayer_play"/>

        <ImageView
            android:id="@+id/home_mini_player_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_miniplayer_next"/>

        <ImageView
            android:id="@+id/home_mini_player_go_list"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_miniplayer_go_list"/>

    </LinearLayout>

    <include
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>