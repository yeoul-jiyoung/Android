<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/song_activity_setting_img_iv"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/btn_player_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp" />

    <ImageView
        android:id="@+id/song_activity_arrow_down"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/btn_main_arrow_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:tint="@color/black"
        android:rotation="90"/>

    <ImageView
        android:id="@+id/song_activity_more_img_iv"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/btn_player_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="45dp"
        app:tint="@color/black" />


    <TextView
        android:id="@+id/song_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pop Song"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/song_activity_title_img_iv"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/song_activity_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kenshi Yonezu"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/song_activity_title_img_iv"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/song_activity_next_to_singer"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="156dp"
        android:src="@drawable/btn_main_arrow_more"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <ImageView
        android:id="@+id/song_activity_title_img_iv"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:src="@drawable/img_album_exp2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        />


    <TextView
        android:id="@+id/song_activity_letter_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가사 1"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_activity_title_img_iv"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/song_activity_letter_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가사 2"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/song_activity_letter_1"
        android:layout_marginTop="13dp"/>

    <ImageView
        android:id="@+id/song_activity_like_img_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_my_like_off"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_activity_letter_2" />

    <ImageView
        android:id="@+id/song_activity_unlike_img_iv"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="152dp"
        android:src="@drawable/btn_player_unlike_off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_activity_letter_2" />

    <ImageView
        android:id="@+id/song_activity_instagram_img_iv"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginBottom="7dp"
        android:src="@drawable/btn_actionbar_instagram"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="7dp"
        />

    <ImageView
        android:id="@+id/song_activity_similar_song_img_iv"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/btn_player_related"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/song_activity_bottom_more_img_iv"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginBottom="7dp"
        android:src="@drawable/btn_player_more"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="7dp"
        />

    <SeekBar
        android:id="@+id/song_progress"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:max="100"
        android:progress="5"
        android:progressBackgroundTint="@color/gray"
        android:progressTint="@color/deepgray"
        android:thumb="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="180dp"
        />

    <TextView
        android:id="@+id/song_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/song_progress"
        android:layout_marginStart="10dp"
        android:textColor="@color/lightgray"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/song_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03:27"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/song_progress"
        android:layout_marginEnd="10dp"
        android:textColor="@color/lightgray"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/song_activity_repeat_img_iv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/nugu_btn_repeat_inactive"
        app:layout_constraintTop_toBottomOf="@id/song_progress"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        />

    <ImageView
        android:id="@+id/song_activity_random_img_iv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/nugu_btn_random_inactive"
        app:layout_constraintTop_toBottomOf="@id/song_progress"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        />

    <ImageView
        android:id="@+id/song_activity_previous_player_img_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/song_progress"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/song_activity_play_player_img_iv"
        android:src="@drawable/btn_miniplayer_previous"/>
    <ImageView
        android:id="@+id/song_activity_play_player_img_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/song_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:src="@drawable/btn_miniplayer_play"/>
    <ImageView
        android:id="@+id/song_activity_next_player_img_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/song_progress"
        app:layout_constraintStart_toEndOf="@id/song_activity_play_player_img_iv"
        android:layout_marginTop="20dp"
        android:src="@drawable/btn_miniplayer_next"/>



</androidx.constraintlayout.widget.ConstraintLayout>